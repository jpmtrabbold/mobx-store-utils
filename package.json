{
  "name": "mobx-store-utils",
  "version": "0.9.0",
  "author": "JoÃ£o Pedro Macimiano Trabbold",
  "module": "dist/mobx-store-utils.esm.js",
  "description": "A series of MobX utils, but most importantly, the useStore hook - a one-stop hook for all your store instantiations",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpmtrabbold/mobx-store-utils.git"
  },
  "keywords": [
    "mobx",
    "store",
    "source props",
    "observable source"
  ],
  "bugs": {
    "url": "https://github.com/jpmtrabbold/mobx-store-utils/issues"
  },
  "homepage": "https://github.com/jpmtrabbold/mobx-store-utils#readme",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "postbuild": "npm run copy-publish-files",
    "copy-publish-files": "cp package.json ./dist/ & cp README.md ./dist/ & cp LICENSE ./dist/",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/mobx-store-utils.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mobx-store-utils.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addons": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "babel-loader": "^8.1.0",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "mobx": "^6.0.3",
    "mobx-react-lite": "^3.0.1"
  }
}
